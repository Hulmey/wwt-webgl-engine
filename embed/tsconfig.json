{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "composite": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "es2017"
    ]
  },
  "references": [
    {
      "path": "../embed-common"
    },
    {
      "path": "../engine"
    },
    {
      "path": "../engine-pinia"
    }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}